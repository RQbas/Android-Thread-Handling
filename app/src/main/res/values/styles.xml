<resources>

    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ProgressBarGreen" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateTint">@color/green</item>
        <item name="android:secondaryProgressTint">@color/lightGray</item>
        <item name="android:progressBackgroundTint">@color/lightGray</item>
        <item name="android:progressTint">@color/green</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="ProgressBarPurple" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateTint">@color/purple</item>
        <item name="android:secondaryProgressTint">@color/lightGray</item>
        <item name="android:progressBackgroundTint">@color/lightGray</item>
        <item name="android:progressTint">@color/purple</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="ProgressBarYellow" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateTint">@color/yellow</item>
        <item name="android:secondaryProgressTint">@color/lightGray</item>
        <item name="android:progressBackgroundTint">@color/lightGray</item>
        <item name="android:progressTint">@color/yellow</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="MainTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
    </style>

    <style name="MainTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MainTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
